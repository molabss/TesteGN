<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="15dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        />

        <View
            android:id="@+id/userIconView"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentTop="true"
            android:background="@mipmap/wait" />


        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/userIconView"
            android:text="@string/wait"
            android:textColor="@color/BLACK"
            android:textSize="12sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/item_dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_title"
            android:maxLines="1"
            android:text="---------------------------------------------"
            android:textColor="@color/md_grey_400" />


        <View
            android:id="@+id/addressIconView"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/item_dots"
            android:background="@mipmap/wait" />


        <TextView
            android:id="@+id/data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/item_dots"
            android:layout_marginTop="10dp"
            android:text="@string/wait"
            android:textColor="@color/BLACK"
            android:textSize="10sp" />

        <View
            android:id="@+id/iconData"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignBottom="@+id/data"


            android:layout_marginRight="10dp"
            android:layout_toStartOf="@+id/data"
            android:background="@mipmap/wait" />

        <TextView
            android:id="@+id/txtContr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/addressIconView"
            android:layout_alignStart="@+id/item_title"
            android:text="@string/wait"
            android:textColor="@color/BLACK"
            android:textSize="10sp" />

        <View
            android:text="TextView"
            android:layout_marginTop="10dp"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@mipmap/wait"
            android:id="@+id/iconLocal"
            android:layout_below="@+id/addressIconView"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wait"
            android:textColor="#000000"
            android:textSize="10sp"
            android:layout_alignTop="@+id/iconLocal"
            android:layout_alignStart="@+id/txtContr" />


    </RelativeLayout>

</android.support.v7.widget.CardView>